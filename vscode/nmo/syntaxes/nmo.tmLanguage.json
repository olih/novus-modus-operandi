{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Novus Modus Operandi",
	"patterns": [
		{
			"include": "#languages"
		},
		{
			"include": "#delimiters"
		},
		{
			"include": "#attributes"
		},
		{
			"include": "#keys"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#urls"
		},
		{
			"include": "#classes"
		},
		{
			"include": "#sections"
		}
	],
	"repository": {
		"urls": {
			"patterns": [
			  {
				"name": "markup.underline.link.dlmt",
				"match": "\bhttps://[^\\s]+$"
			  }
			]
		  },
		  "identifiers": {
			"patterns": [
			  {
				"name": "keyword.control.dlmt",
				"match": "\bi:[0-9]+\b"
			  }
			]
		  },
		  "languages": {
			"patterns": [
			  {
				"name": "keyword.control.dlmt",
				"match": "\b(en|fr)-(gb|us|fr)\b"
			  }
			]
		  },
		"sections": {
			"patterns": [
			  {
				"name": "markup.heading.1.dlmt",
				"match": "^(section header|section fragments|section chunks|section accessors)$"
			  }
			]
		  },
		  "delimiters": {
			"patterns": [
			  {
				"name": "markup.heading.1.dlmt",
				"match": "^--------$"
			  },
			  {
				"name": "markup.heading.1.dlmt",
				"match": "->"
			  }
			]
		  },
		"keys": {
			"patterns": [
			  {
				"name": "keyword.control.dlmt",
				"match": "^(license|title|description|attribution-name|name|author) [a-z]{2}(-[a-z]{2})?:"
			  },
			  {
				"name": "keyword.control.dlmt",
				"match": "^(id-urn|require-sections|prefixes|copyright-year|require-types|require-generators):"
			  },
			  {
				"name": "keyword.control.dlmt",
				"match": "^(attribution-url|license-url|metadata-url|homepage-url|content-url|author-url|repository-url) (html|json|json-ld|markdown|rdf|nt|ttl|csv) [a-z]{2}(-[a-z]{2})?:"
			  }
			]
		  },
		  "classes": {
			"patterns": [
			  {
				"name": "entity.name.class.dlmt",
				"match": "\\b(fragment|chunk|accessor)\\b"
			  }
			]
		  },
		  "attributes": {
			"patterns": [{
				"name": "entity.name.tag.dlmt",
				"match": "\\b(constraints|values|expr|end)\\b"
			},
			{
				"name": "entity.name.tag.dlmt",
				"match": "\\b(editable|read-once|write-once|multipleof|zeropad|remote-check|startswith|endswith|minlength|maxlength|followedby|charexp|hash:sha-256|minitems|uniq|singleline|multiplelines|filename|valuecol|titlecol|optimize:speed|separator)\\b"
			},
			{
				"name": "entity.name.tag.dlmt",
				"match": "\\b(hourly-write|daily-write|monthly-write|hourly-read|daily-read|monthly-read)\\b"
			},
			{
				"name": "entity.name.tag.dlmt",
				"match": "\\b(marker|enum|int|float|fraction|time|email|idstring|freetext|csvenum)\\b"
			}
			]
		}
	},
	"scopeName": "source.nmo"
}